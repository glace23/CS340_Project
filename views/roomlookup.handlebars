<h1>Room Lookup</h1>

<button onclick="showRoomLookup()">Look for Room</button><button onclick="showRoomAdd()">Add Room</button>
<br>

<form id="room-lookup" method="GET" action="/room" hidden>
    <h3>Look for Room:</h3>
    <p>Search for a room in the database.</p>
    <div class="room-form">
        <label for="room number">Room Number: </label>
        <input type="text" name="roomNumber" placeholder="A302" id="roomNumber">
    </div>
    <div class="room-form">
        <label for="course name">Course Name: </label>
        <input type="text" name="courseName" placeholder="CS420" id="courseName">
    </div>
    <input type="submit" value="Search">
</form>

<form id="room-add" hidden>
    <h3>Add a Room:</h3>
    <p>Add a new room in the database.</p>
    <div>
        <label for="roomNumberAdd">Room Number:</label>
        <input type="text" id="roomNumberAdd" name="roomNumberAdd" placeholder="A302" pattern="[A-Z]{1}[0-9]{3}" maxlength="4" required>
    </div>
    <input type="submit" id="addRoom">
</form>

<br>
<form action="/room" method="GET">
<input type="submit" value="Clear Search">
</form>
<br>
<table>
    <thead>
        <tr>
            <th>Room Number</th>
            <th>Course Name</th>
            
        </tr>
        
    </thead>
    <tbody>
        {{#each room}}
        <tr>
            <td>{{roomNumber}}</td>
            <td>{{courseName}}</td>
            <td id="update"><button onclick="">Update</button></td>
            <td id="delete"><button onclick="deleteRoom({{this.roomID}})">Delete</button></td>
        </tr>
        {{/each}}
    </tbody>
</table>
<br>
