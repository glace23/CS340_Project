<h1>Student Lookup</h1>

<button onclick="showStudentLookup()">Look for Student</button><button onclick="showStudentAdd()">Add Student</button>

<div id="student-lookup" hidden>
    <form>
        <h3>Look for Student:</h3>
        <p>Search for the fields you would like to, all fields are optional.</p>
        
        <div class="student-form">
            <label for="student fname">Student First Name: </label>
            <input type="text" name="studentfname" id="studentfname" value="" pattern="[A-Za-z]+">
        </div>
        <div class="student-form">
            <label for="student name">Student Last Name: </label>
            <input type="text" name="studentlname" id="studentlname" value="" pattern="[A-Za-z]+">
        </div>
        <div class="student-form">
            <label for="student email">Student Email: </label>
            <input type="email" name="studentemail" id="studentemail" value="">
        </div>
        <div class="student-form">
            <label for="student number">Student ID Number: </label>
            <input type="text" name="studentnumber" id="studentnumber" value="" pattern="[0-9]{6}" minlength="6" maxlength="6">
        </div>
        <div class="student-form">
            <label for="student name">Student Phone Number: </label>
            <input type="text" name="studentphonenumber" id="studentphonenumber" maxlength="10" value="" pattern="[0-9]{10}" minlength="10" maxlength="10">
        </div>
    </form>
    <button onclick="lookUpStudent()">Search</button>
</div>

<form id="student-add" hidden>
    <h3>Add a Student:</h3>
    <p>Add a new student to the database. All fields are required.</p> 
    <div>
        <label for="sfname">Student First Name:</label>
        <input type="text" id="sfname" name="sfname" placeholder="John" pattern="[A-Za-z]+" required>
    </div>
    <div>
        <label for="slname">Student Last Name:</label>
        <input type="text" id="slname" name="slname" placeholder="Doe" pattern="[A-Za-z]+" required>
    </div>
    <div>
        <label for="semail">Student Email:</label>
        <input type="email" id="semail" name="semail" placeholder="doejohn@osu.edu" required>
    </div>
    <div>
        <label for="snumber">Student ID Number:</label>
        <input type="text" id="snumber" name="snumber" placeholder="123456" pattern="[0-9]{6}" minlength="6" maxlength="6" required>
    </div>
    <div>
        <label for="sphone">Student Phone Number:</label>
        <input type="tel" id="sphone" name="sphone" placeholder="1112223333" pattern="[0-9]{10}" minlength="10" maxlength="10" required>
    </div>
  <input type="submit" value="Add New Student" id="addStudent">
</form>

<div id="searchresults" hidden>
    <p id ="searchvalue"></p>
    <table>
        <thead>
            <tr>
                <th>Student First Name</th>
                <th>Student Last Name</th>
                <th>Student Email</th>
                <th>Student ID Number</th>
                <th>Student Phone Number</th>
                <th>Student Table ID</th>
            
        </thead>
        <tbody>
            {{#each students}}
            <tr id="student{{studentID}}">
                <td>{{studentFirstName}}</td>
                <td>{{studentLastName}}</td>
                <td>{{studentEmail}}</td>
                <td>{{studentNumber}}</td>
                <td>{{studentPhoneNumber}}</td>
                <td>{{studentID}}</td>
                <td><button value={{studentID}} onclick="updateStudent({{studentID}})">Update</button></td>
                <td><button value={{studentID}} onclick="deleteStudent({{studentID}})">Delete</button></td>
            </tr>
            {{/each}}
        </tbody>
    </table>
</div>

